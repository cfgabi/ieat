<!-- Construção de tabela para os usuários de restaurantes -->
<p>Aqui estão os produtos cadastrados para o restaurante <%= current_user.restaurant.name %></p>
<table>
  <thead>
    <tr>
      <th> Nome </th>
      <th> Valor </th>
    </tr>
  </thead>

  <tbody>
    <% current_user.restaurant.products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.value %></td>
      </tr>
    <% end %>
  </tbody>
</table>
